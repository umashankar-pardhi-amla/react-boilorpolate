{
  "name": "react-boilorpolate",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "dev:all": "npm run dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "lint": "eslint app/ e2e/",
    "format": "prettier --write \"app/**/*.{ts,tsx,css,json}\" \"e2e/**/*.ts\"",
    "validate": "npm run typecheck && npm run lint",
    "spellcheck": "cspell \"app/**/*.{ts,tsx,json,css}\" \"e2e/**/*.ts\"",
    "spellcheck:ci": "cspell \"app/**/*.{ts,tsx,json,css}\" \"e2e/**/*.ts\" \"*.md\" --no-progress",
    "e2e": "playwright test",
    "e2e:ui": "playwright test --ui",
    "e2e:install": "playwright install chromium",
    "build:analyze": "cross-env ANALYZE=1 npm run build",
    "validate:all": "npm run typecheck && npm run lint && npm run e2e",
    "prepare": "husky"
  },
  "lint-staged": {
    "app/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write",
      "cspell --no-must-find-files"
    ],
    "e2e/**/*.ts": [
      "eslint --fix",
      "prettier --write",
      "cspell --no-must-find-files"
    ],
    "app/**/*.{css,json}": [
      "prettier --write",
      "cspell --no-must-find-files"
    ]
  },
  "dependencies": {
    "@react-router/node": "7.12.0",
    "@react-router/serve": "7.12.0",
    "@tanstack/react-query": "^5.90.20",
    "antd": "^6.2.2",
    "axios": "^1.13.4",
    "dayjs": "^1.11.19",
    "isbot": "^5.1.31",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-router": "7.12.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.58.1",
    "@react-router/dev": "7.12.0",
    "@tailwindcss/vite": "^4.1.13",
    "@types/node": "^22",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "cspell": "^9.6.3",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "rollup-plugin-visualizer": "^6.0.5",
    "tailwindcss": "^4.1.13",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.1.7",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
